{
  "env": {
    "browser": true,
    "node": true,
    "es2021": true
  },
  "extends": ["airbnb", "prettier", "plugin:node/recommended"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier" :  ["error", { "singleQuote": true }],
    "no-unused-vars" : "warn",
    "no-console" : "off",
    "quotes": ["error", "single"],
    "func-names" : "off",
    "object-shorthand" :"off"
  }
}
